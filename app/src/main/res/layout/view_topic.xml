<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/topicCardView"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/title"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="110dp"
            android:layout_marginVertical="16dp"
            android:lines="2"
            android:maxLines="2"
            android:text="Texto de prueba en dos lineas y para que se vea"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/avatarImage"
            android:layout_width="90dp"
            android:layout_height="108dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            tools:srcCompat="@tools:sample/avatars" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="269dp"
            android:layout_height="28dp"
            android:layout_marginStart="110dp"
            android:layout_marginTop="90dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:layout_constraintEnd_toStartOf="@+id/topicCount"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@android:drawable/sym_action_chat" />

            <TextView
                android:id="@+id/topicCount"
                android:layout_width="24dp"
                android:layout_height="21dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="24"
                app:layout_constraintBottom_toBottomOf="@+id/imageButton1"
                app:layout_constraintStart_toEndOf="@+id/imageButton1"
                app:layout_constraintTop_toTopOf="@+id/imageButton1"
                app:layout_constraintVertical_bias="1.0" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="@+id/imageButton1"
                app:layout_constraintStart_toEndOf="@+id/topicCount"
                app:layout_constraintTop_toTopOf="@+id/imageButton1"
                app:srcCompat="@android:drawable/ic_menu_myplaces" />

            <TextView
                android:id="@+id/replayCount"
                android:layout_width="30dp"
                android:layout_height="21dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="102"
                app:layout_constraintBottom_toBottomOf="@+id/topicCount"
                app:layout_constraintStart_toEndOf="@+id/imageButton2"
                app:layout_constraintTop_toTopOf="@+id/topicCount" />

            <TextView
                android:id="@+id/lastPostDate"
                android:layout_width="70dp"
                android:layout_height="21dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:text="Jul 23"
                app:layout_constraintBottom_toBottomOf="@+id/topicCount"
                app:layout_constraintStart_toEndOf="@+id/imageButton3"
                app:layout_constraintTop_toTopOf="@+id/topicCount"
                app:layout_constraintVertical_bias="0.0" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                app:layout_constraintBottom_toBottomOf="@+id/imageButton1"
                app:layout_constraintStart_toEndOf="@+id/replayCount"
                app:layout_constraintTop_toTopOf="@+id/imageButton1"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@android:drawable/ic_menu_my_calendar" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>